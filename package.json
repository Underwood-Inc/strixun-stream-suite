{
  "name": "strixun-stream-suite",
  "version": "1.3.0",
  "description": "Strixun's Stream Suite - A comprehensive OBS Studio toolkit for animations, layouts, text cycling, and Twitch integration",
  "private": true,
  "packageManager": "pnpm@9.15.1",
  "type": "module",
  "scripts": {
    "build:otp-login": "pnpm --filter @strixun/otp-login build",
    "build:otp-login:react": "pnpm --filter @strixun/otp-login build:react",
    "build:otp-login:svelte": "pnpm --filter @strixun/otp-login build:svelte",
    "build:otp-login:vanilla": "pnpm --filter @strixun/otp-login build:vanilla",
    "build:otp-login:all": "pnpm --filter @strixun/otp-login build",
    "prebuild": "pnpm build:otp-login:svelte",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage --passWithNoTests",
    "test:serverless": "pnpm --filter \"./serverless/otp-auth-service\" test && pnpm --filter \"./serverless/mods-api\" test && pnpm --filter \"./serverless/twitch-api\" test",
    "test:audit": "tsx scripts/test-audit.ts",
    "test:all": "pnpm -r --parallel test 2>&1 | Select-String -Pattern \"(?i)(warning|error|fail)\"",
    "test:all:verbose": "pnpm -r --parallel test",
    "test:all:sequential": "pnpm -r test",
    "test:all:totals": "pnpm -r test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "deploy:dev:all": "node serverless/deploy-dev-all.js",
    "deploy:dev:all:dry-run": "node serverless/deploy-dev-all.js --dry-run",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "check:all": "pnpm check && pnpm lint && pnpm build && pnpm --filter \"./control-panel\" build && pnpm --filter \"./control-panel\" lint && pnpm --filter \"./mods-hub\" build && pnpm --filter \"./mods-hub\" lint && pnpm --filter @strixun/otp-login build && pnpm --filter \"./serverless/otp-auth-service\" check && pnpm --filter \"./serverless/otp-auth-service\" build && pnpm --filter \"./serverless/otp-auth-service/dashboard\" check && pnpm --filter \"./serverless/otp-auth-service/dashboard\" build && pnpm --filter \"./serverless/otp-auth-service/sdk\" build && pnpm --filter \"./serverless/url-shortener/app\" build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "version": "changeset version",
    "release": "changeset publish",
    "generate-icons": "node scripts/generate-pwa-icons.js",
    "update-badge": "node scripts/update-version-badge.js",
    "migrate-wiki": "node scripts/migrate-wiki.js",
    "list-migrated-docs": "node scripts/list-migrated-docs.js",
    "storybook": "pnpm --filter @strixun/shared-components storybook",
    "build-storybook": "pnpm --filter @strixun/shared-components build-storybook"
  },
  "dependencies": {
    "swiper": "^11.2.10",
    "@strixun/status-flair": "workspace:*",
    "@strixun/search-query-parser": "workspace:*",
    "@strixun/ad-carousel": "workspace:*",
    "@strixun/error-mapping": "workspace:*",
    "@strixun/otp-login": "workspace:*",
    "@strixun/e2e-helpers": "workspace:*"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-a11y": "^8.6.15",
    "@storybook/addon-docs": "^8.6.15",
    "@storybook/addon-svelte-csf": "^5.0.10",
    "@storybook/svelte-vite": "^8.6.15",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tsconfig/svelte": "^5.0.6",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^4.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "jsdom": "^25.0.1",
    "eslint-plugin-svelte": "^3.13.1",
    "playwright": "^1.57.0",
    "@playwright/test": "^1.57.0",
    "sass": "^1.97.1",
    "sharp": "^0.34.5",
    "storybook": "^8.6.15",
    "svelte": "^5.46.0",
    "svelte-check": "^4.3.5",
    "svelte-eslint-parser": "^1.4.1",
    "terser": "^5.44.1",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0"
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.9.3",
      "vite": "^7.3.0",
      "source-map": "^0.7.6",
      "magic-string": ">=0.30.0"
    }
  }
}
