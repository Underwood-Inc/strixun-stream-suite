{
  "name": "strixun-stream-suite",
  "version": "1.3.0",
  "description": "Strixun's Stream Suite - A comprehensive OBS Studio toolkit for animations, layouts, text cycling, and Twitch integration",
  "private": true,
  "packageManager": "pnpm@9.15.1",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "build:packages": "turbo run build --filter=./packages/* --filter=./dice-board-game",
    "build:apps": "turbo run build --filter=./mods-hub --filter=./control-panel --filter=./serverless/*/app --filter=./serverless/*/dashboard",
    "build:all": "turbo run build --filter=./packages/* --filter=./dice-board-game --filter=./mods-hub --filter=./control-panel --filter=./serverless/*/app --filter=./serverless/*/dashboard --filter=.",
    "build:clean": "turbo run build --force",
    "dev": "vite",
    "dev:turbo": "turbo run dev --concurrency=15",
    "dev:ports": "node scripts/show-dev-ports.js",
    "preview": "vite preview",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage --passWithNoTests",
    "test:all": "turbo run test",
    "test:all:verbose": "turbo run test --output-logs=new-only",
    "test:serverless": "turbo run test --filter=./serverless/otp-auth-service --filter=./serverless/mods-api --filter=./serverless/twitch-api",
    "test:audit": "tsx scripts/test-audit.ts",
    "test:all:sequential": "turbo run test --concurrency=1",
    "test:all:totals": "turbo run test 2>&1 | Tee-Object -FilePath test-output.txt && node scripts/generate-test-report.js",
    "test:e2e": "node serverless/mods-api/scripts/setup-test-secrets.js && node serverless/otp-auth-service/scripts/setup-test-secrets.js && playwright test",
    "test:e2e:ui": "pnpm --filter @strixun/asciimoji build && node serverless/mods-api/scripts/setup-test-secrets.js && node serverless/otp-auth-service/scripts/setup-test-secrets.js && playwright test --ui",
    "test:e2e:debug": "pnpm --filter @strixun/asciimoji build && node serverless/mods-api/scripts/setup-test-secrets.js && node serverless/otp-auth-service/scripts/setup-test-secrets.js && playwright test --debug",
    "test:e2e:headed": "pnpm --filter @strixun/asciimoji build && node serverless/mods-api/scripts/setup-test-secrets.js && node serverless/otp-auth-service/scripts/setup-test-secrets.js && playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "deploy:dev:all": "node serverless/deploy-dev-all.js",
    "deploy:dev:all:dry-run": "node serverless/deploy-dev-all.js --dry-run",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "check:all": "turbo run check build lint",
    "lint": "eslint .",
    "lint:all": "turbo run lint",
    "lint:fix": "eslint . --fix",
    "version": "changeset version",
    "release": "changeset publish",
    "generate-icons": "node scripts/generate-pwa-icons.js",
    "update-badge": "node scripts/update-version-badge.js",
    "migrate-wiki": "node scripts/migrate-wiki.js",
    "list-migrated-docs": "node scripts/list-migrated-docs.js",
    "storybook": "pnpm --filter @strixun/shared-components storybook",
    "build-storybook": "pnpm --filter @strixun/shared-components build-storybook"
  },
  "dependencies": {
    "swiper": "^11.2.10",
    "@strixun/status-flair": "workspace:*",
    "@strixun/search-query-parser": "workspace:*",
    "@strixun/ad-carousel": "workspace:*",
    "@strixun/error-mapping": "workspace:*",
    "@strixun/otp-login": "workspace:*",
    "@strixun/e2e-helpers": "workspace:*"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-a11y": "^8.6.15",
    "@storybook/addon-docs": "^8.6.15",
    "@storybook/addon-svelte-csf": "^5.0.10",
    "@storybook/svelte": "^8.6.15",
    "@storybook/svelte-vite": "^8.6.15",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tsconfig/svelte": "^5.0.6",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^4.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "jsdom": "^25.0.1",
    "eslint-plugin-svelte": "^3.13.1",
    "playwright": "^1.57.0",
    "@playwright/test": "^1.57.0",
    "sass": "^1.97.1",
    "sharp": "^0.34.5",
    "storybook": "^8.6.15",
    "svelte": "^5.46.0",
    "svelte-check": "^4.3.5",
    "svelte-eslint-parser": "^1.4.1",
    "terser": "^5.44.1",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0",
    "turbo": "^2.3.3"
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.9.3",
      "vite": "^7.3.0",
      "source-map": "^0.7.6",
      "magic-string": ">=0.30.0",
      "@storybook/svelte": "^8.6.15",
      "@storybook/svelte-vite": "^8.6.15",
      "@sveltejs/vite-plugin-svelte": "^6.2.1",
      "@chromatic-com/storybook": "^4.1.3",
      "storybook": "^8.6.15",
      "@react-three/drei": "^10.0.0-rc.1",
      "react-helmet-async": "^2.0.5",
      "react": "^19.0.0",
      "react-dom": "^19.0.0"
    }
  }
}
