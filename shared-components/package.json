{
  "name": "@strixun/shared-components",
  "version": "1.0.0",
  "description": "Shared component library for Strixun Stream Suite with Storybook documentation",
  "private": true,
  "type": "module",
  "exports": {
    "./react": {
      "types": "./react/index.ts",
      "default": "./react/index.ts"
    },
    "./react/*": {
      "types": "./react/*.tsx",
      "default": "./react/*.tsx"
    },
    "./react/Tooltip": {
      "types": "./react/Tooltip.tsx",
      "default": "./react/Tooltip.tsx"
    },
    "./react/InteractiveThumbnail": {
      "types": "./react/InteractiveThumbnail.tsx",
      "default": "./react/InteractiveThumbnail.tsx"
    },
    "./svelte/Tooltip": {
      "types": "./svelte/Tooltip.svelte",
      "default": "./svelte/Tooltip.svelte"
    },
    "./svelte/TruncatedText": {
      "types": "./svelte/TruncatedText.svelte",
      "default": "./svelte/TruncatedText.svelte"
    },
    "./svelte/StatusFlair": {
      "types": "./svelte/StatusFlair.svelte",
      "default": "./svelte/StatusFlair.svelte"
    },
    "./svelte/CodeBlock": {
      "types": "./svelte/CodeBlock.svelte",
      "default": "./svelte/CodeBlock.svelte"
    },
    "./svelte/MultiFileViewer": {
      "types": "./svelte/MultiFileViewer.svelte",
      "default": "./svelte/MultiFileViewer.svelte"
    },
    "./react/CodeBlock": {
      "types": "./react/CodeBlock.tsx",
      "default": "./react/CodeBlock.tsx"
    },
    "./react/MultiFileViewer": {
      "types": "./react/MultiFileViewer.tsx",
      "default": "./react/MultiFileViewer.tsx"
    }
  },
  "scripts": {
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --passWithNoTests",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "prismjs": "^1.29.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-a11y": "^8.6.15",
    "@storybook/addon-docs": "^8.6.15",
    "@storybook/addon-svelte-csf": "^5.0.10",
    "@storybook/manager-api": "^8.6.15",
    "@storybook/svelte": "^8.6.15",
    "@storybook/svelte-vite": "^8.6.15",
    "@storybook/theming": "^8.6.15",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@tsconfig/svelte": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/prismjs": "^1.26.0",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@types/react-window": "^1.8.8",
    "@types/styled-components": "^5.1.34",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.16",
    "jsdom": "^25.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-window": "^1.8.10",
    "styled-components": "^6.1.13",
    "sass": "^1.97.1",
    "storybook": "^8.6.15",
    "svelte": "^5.46.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0"
  }
}

