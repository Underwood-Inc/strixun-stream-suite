{
  "name": "@strixun/auth-store",
  "version": "1.0.0",
  "description": "Shared, framework-agnostic authentication store for all Strixun projects",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./zustand": {
      "types": "./dist/adapters/zustand.d.ts",
      "default": "./dist/adapters/zustand.js"
    },
    "./svelte": {
      "types": "./dist/adapters/svelte.d.ts",
      "default": "./dist/adapters/svelte.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "default": "./dist/core/index.js"
    },
    "./core/api": {
      "types": "./dist/core/api.d.ts",
      "default": "./dist/core/api.js"
    },
    "./core/utils": {
      "types": "./dist/core/utils.d.ts",
      "default": "./dist/core/utils.js"
    },
    "./core/types": {
      "types": "./dist/core/types.d.ts",
      "default": "./dist/core/types.js"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map",
    "*.md"
  ],
  "dependencies": {
    "@strixun/api-framework": "workspace:*"
  },
  "peerDependencies": {
    "zustand": "^4.0.0",
    "svelte": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "zustand": {
      "optional": true
    },
    "svelte": {
      "optional": true
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --passWithNoTests"
  },
  "devDependencies": {
    "vitest": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16"
  }
}
