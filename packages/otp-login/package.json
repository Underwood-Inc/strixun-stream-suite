{
  "name": "@strixun/otp-login",
  "version": "1.0.0",
  "description": "Standalone OTP Login UI Library - CDN Ready",
  "private": true,
  "type": "module",
  "main": "./core.ts",
  "types": "./otp-login.d.ts",
  "exports": {
    ".": {
      "types": "./otp-login.d.ts",
      "default": "./core.ts"
    },
    "./svelte/OtpLogin.svelte": "./svelte/OtpLogin.svelte",
    "./react": {
      "types": "./react/OtpLogin.tsx",
      "default": "./react/OtpLogin.tsx"
    },
    "./dist/react": {
      "types": "./react/index.d.ts",
      "default": "../../dist/otp-login/react/index.js"
    },
    "./dist/react/otp-login.css": "../../dist/otp-login/react/otp-login.css",
    "./dist/js": "../../dist/otp-login/js/index.js"
  },
  "scripts": {
    "build": "node scripts/build-vanilla.js && node scripts/build-react.js",
    "build:vanilla": "node scripts/build-vanilla.js",
    "build:react": "node scripts/build-react.js",
    "build:all": "pnpm build",
    "prebuild": "node scripts/clean-dist.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@strixun/api-framework": "workspace:*"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/svelte": "^4.1.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@vitejs/plugin-react": "^4.3.4",
    "esbuild": "^0.24.0",
    "jsdom": "^25.0.1",
    "svelte": "^5.46.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "files": [
    "core.ts",
    "svelte/",
    "react/",
    "entry.ts",
    "otp-login.d.ts",
    "../../dist/otp-login/",
    "README.md",
    "CDN_USAGE.md",
    "BUILD_VERIFICATION.md"
  ]
}
