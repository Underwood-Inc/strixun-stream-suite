{
  "name": "@strixun/chat",
  "version": "1.0.0",
  "description": "Framework-agnostic P2P chat client with WebRTC signaling",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "default": "./dist/core/index.js"
    },
    "./core/types": {
      "types": "./dist/core/types.d.ts",
      "default": "./dist/core/types.js"
    },
    "./core/webrtc": {
      "types": "./dist/core/webrtc.d.ts",
      "default": "./dist/core/webrtc.js"
    },
    "./core/signaling": {
      "types": "./dist/core/signaling.d.ts",
      "default": "./dist/core/signaling.js"
    },
    "./core/room-manager": {
      "types": "./dist/core/room-manager.d.ts",
      "default": "./dist/core/room-manager.js"
    },
    "./zustand": {
      "types": "./dist/adapters/zustand.d.ts",
      "default": "./dist/adapters/zustand.js"
    },
    "./adapters/zustand": {
      "types": "./dist/adapters/zustand.d.ts",
      "default": "./dist/adapters/zustand.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "default": "./dist/react/index.js"
    },
    "./react/chat.css": "./react/chat.css",
    "./react/styles": "./react/chat.css",
    "./styles": "./react/chat.css"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map",
    "react/**/*.css",
    "*.md"
  ],
  "dependencies": {
    "@strixun/p2p-storage": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "zustand": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "zustand": {
      "optional": true
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "vitest": "^4.0.16"
  }
}
