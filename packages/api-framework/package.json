{
  "name": "@strixun/api-framework",
  "version": "1.0.0",
  "description": "Shared API framework for Strixun Stream Suite - Cloudflare Workers and browser support",
  "private": true,
  "type": "module",
  "main": "./index.ts",
  "types": "./index.ts",
  "exports": {
    ".": {
      "types": "./index.ts",
      "default": "./index.ts"
    },
    "./enhanced": {
      "types": "./enhanced.d.ts",
      "default": "./enhanced.ts"
    },
    "./client": {
      "types": "./client.d.ts",
      "default": "./client.ts"
    },
    "./enhanced-router": {
      "types": "./enhanced-router.ts",
      "default": "./enhanced-router.ts"
    },
    "./jwt": {
      "types": "./jwt.ts",
      "default": "./jwt.ts"
    },
    "./test-utils": {
      "types": "./test-utils.ts",
      "default": "./test-utils.ts"
    }
  },
  "files": [
    "*.js",
    "*.d.ts",
    "*.ts"
  ],
  "scripts": {
    "build": "tsc --noEmit",
    "dev": "tsc --noEmit --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --passWithNoTests"
  },
  "dependencies": {
    "@strixun/service-client": "workspace:*",
    "@strixun/types": "workspace:*"
  },
  "devDependencies": {
    "vitest": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "@cloudflare/workers-types": "^4.20241106.0",
    "typescript": "^5.0.0"
  }
}

