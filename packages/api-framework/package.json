{
  "name": "@strixun/api-framework",
  "version": "1.0.0",
  "description": "Shared API framework for Strixun Stream Suite - Cloudflare Workers and browser support",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./enhanced": {
      "types": "./dist/enhanced.d.ts",
      "default": "./dist/enhanced.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    },
    "./enhanced-router": {
      "types": "./dist/enhanced-router.d.ts",
      "default": "./dist/enhanced-router.js"
    },
    "./jwt": {
      "types": "./dist/jwt.d.ts",
      "default": "./dist/jwt.js"
    },
    "./test-utils": {
      "types": "./dist/test-utils.d.ts",
      "default": "./dist/test-utils.js"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map",
    "*.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --passWithNoTests"
  },
  "dependencies": {
    "@strixun/error-utils": "workspace:*",
    "@strixun/oidc-jwt": "workspace:*",
    "@strixun/service-client": "workspace:*",
    "@strixun/types": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241106.0",
    "@vitest/coverage-v8": "^4.0.16",
    "typescript": "^5.0.0",
    "vitest": "^4.0.16"
  }
}
