{
  "name": "@strixun/chat-hub",
  "packageManager": "pnpm@9.15.1",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:all": "concurrently -n frontend,api -c cyan,yellow --raw --no-kill-others \"pnpm dev\" \"pnpm --filter strixun-chat-signaling dev\"",
    "dev:api": "pnpm --filter strixun-chat-signaling dev",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@strixun/auth-store": "workspace:*",
    "@strixun/chat": "workspace:*",
    "@strixun/otp-login": "workspace:*",
    "@strixun/shared-components": "workspace:*",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.15.0",
    "sass": "^1.77.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.19.1",
    "vite": "^7.3.0",
    "vite-plugin-pwa": "^0.20.0",
    "vitest": "^4.0.16"
  }
}
