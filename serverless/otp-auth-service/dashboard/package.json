{
  "name": "otp-auth-dashboard",
  "version": "1.0.0",
  "description": "Developer Dashboard for OTP Auth Service - Svelte + TypeScript",
  "type": "module",
  "scripts": {
    "predev": "pnpm --filter @strixun/api-framework build",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --passWithNoTests"
  },
  "dependencies": {
    "@observablehq/plot": "^0.6.15",
    "@strixun/api-framework": "workspace:*",
    "@strixun/otp-login": "workspace:*",
    "@strixun/tooltip": "workspace:*",
    "svelte": "^5.46.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251225.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tsconfig/svelte": "^5.0.6",
    "@types/node": "^25.0.3",
    "sass": "^1.97.1",
    "svelte-check": "^4.3.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  }
}

