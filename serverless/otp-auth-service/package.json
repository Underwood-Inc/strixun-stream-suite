{
  "name": "otp-auth-service",
  "version": "1.0.0",
  "description": "Multi-tenant OTP authentication service - Cloudflare Worker with email OTP, JWT tokens, API key management, and analytics - Strixun Stream Suite",
  "private": true,
  "packageManager": "pnpm@9.15.1",
  "scripts": {
    "dev": "wrangler dev",
    "dev:dashboard": "cd dashboard && pnpm dev",
    "dev:landing": "cd landing-page && pnpm dev",
    "dev:all": "concurrently -n worker,dashboard,landing -c yellow,cyan,magenta \"pnpm dev\" \"pnpm dev:dashboard\" \"pnpm dev:landing\"",
    "build": "node scripts/build-dashboard.js",
    "build:dashboard": "cd dashboard && pnpm build",
    "build:landing": "cd landing-page && pnpm build",
    "preview": "pnpm build && wrangler dev --env production",
    "preview:watch": "node scripts/watch-preview.js",
    "preview:local": "pnpm build && wrangler dev --local --env production",
    "deploy": "pnpm build && wrangler deploy",
    "deploy:prod": "pnpm build && wrangler deploy --env production",
    "tail": "wrangler tail",
    "tail:prod": "wrangler tail --env production"
  },
  "devDependencies": {
    "chokidar": "^4.0.3",
    "concurrently": "^9.1.2",
    "mermaid": "^11.12.2",
    "prismjs": "^1.30.0",
    "swagger-ui-dist": "^5.31.0",
    "wrangler": "^4.56.0"
  }
}
