{
  "name": "@strixun/otp-auth-service",
  "version": "1.0.0",
  "description": "Multi-tenant OTP authentication service - Cloudflare Worker with email OTP, JWT tokens, API key management, and analytics - Strixun Stream Suite",
  "private": true,
  "packageManager": "pnpm@9.15.1",
  "type": "module",
  "main": "./worker.ts",
  "types": "./worker.ts",
  "exports": {
    ".": {
      "types": "./worker.ts",
      "default": "./worker.ts"
    },
    "./utils/crypto": {
      "types": "./utils/crypto.ts",
      "default": "./utils/crypto.ts"
    }
  },
  "scripts": {
    "dev": "wrangler dev",
    "dev:app": "vite",
    "dev:all": "concurrently -n worker,app -c yellow,cyan \"pnpm dev\" \"pnpm dev:app\"",
    "build": "node scripts/build-with-key.js",
    "build:app": "node scripts/build-with-key.js",
    "preview": "pnpm build && wrangler dev --env production",
    "preview:app": "vite preview",
    "preview:watch": "node scripts/watch-preview.js",
    "preview:local": "pnpm build && wrangler dev --local --env production",
    "deploy": "pnpm build && wrangler deploy",
    "deploy:prod": "pnpm build && wrangler deploy --env production",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "node scripts/run-integration-tests.js dev",
    "test:integration:dev": "node scripts/run-integration-tests.js dev",
    "test:integration:prod": "node scripts/run-integration-tests.js prod",
    "tail": "wrangler tail",
    "tail:prod": "wrangler tail --env production",
    "tail:helper": "node scripts/tail-logs-helper.js"
  },
  "dependencies": {
    "@strixun/api-framework": "workspace:*",
    "@strixun/service-client": "workspace:*",
    "@strixun/types": "workspace:*",
    "@strixun/e2e-helpers": "workspace:*",
    "mermaid": "^11.12.2",
    "prismjs": "^1.30.0",
    "svelte": "^5.46.0",
    "swagger-ui-dist": "^5.17.14"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251225.0",
    "@iarna/toml": "^2.2.5",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tsconfig/svelte": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/prismjs": "^1.26.3",
    "@vitest/coverage-v8": "^4.0.16",
    "chokidar": "^4.0.3",
    "concurrently": "^9.1.2",
    "sass": "^1.97.1",
    "svelte-check": "^4.3.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  }
}
