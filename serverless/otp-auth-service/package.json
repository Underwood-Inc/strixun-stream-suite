{
  "name": "@strixun/otp-auth-service",
  "version": "1.0.0",
  "description": "Multi-tenant OTP authentication service - Cloudflare Worker with email OTP, JWT tokens, API key management, and analytics - Strixun Stream Suite",
  "private": true,
  "packageManager": "pnpm@9.15.1",
  "type": "module",
  "main": "./worker.ts",
  "types": "./worker.ts",
  "exports": {
    ".": {
      "types": "./worker.ts",
      "default": "./worker.ts"
    },
    "./shared": {
      "types": "./shared/dist/index.d.ts",
      "default": "./shared/dist/index.js"
    },
    "./shared/auth-urls": {
      "types": "./shared/dist/auth-urls.d.ts",
      "default": "./shared/dist/auth-urls.js"
    },
    "./shared/auth-check": {
      "types": "./shared/dist/auth-check.d.ts",
      "default": "./shared/dist/auth-check.js"
    },
    "./shared/auth-errors": {
      "types": "./shared/dist/auth-errors.d.ts",
      "default": "./shared/dist/auth-errors.js"
    },
    "./utils/crypto": {
      "types": "./utils/crypto.ts",
      "default": "./utils/crypto.ts"
    },
    "./services/nameGenerator": {
      "types": "./services/nameGenerator.ts",
      "default": "./services/nameGenerator.ts"
    }
  },
  "scripts": {
    "predev": "pnpm run build:worker",
    "dev": "concurrently -n worker,app -c yellow,cyan --kill-others-on-fail --success first \"pnpm dev:worker\" \"pnpm dev:app\"",
    "dev:worker": "wrangler dev --port 8787 --local",
    "dev:app": "vite",
    "dev:all": "concurrently -n worker,customer-api,app -c yellow,green,cyan --kill-others-on-fail --success first \"pnpm dev:worker\" \"pnpm --filter strixun-customer-api dev\" \"pnpm dev:app\"",
    "setup:test-secrets": "node scripts/setup-test-secrets.js",
    "dev:with-secrets": "pnpm setup:test-secrets && pnpm dev",
    "build": "pnpm run build:shared && vite build && node scripts/build-landing-assets.js",
    "build:worker": "esbuild worker.ts --bundle --format=esm --outfile=dist/worker.js --platform=node --external:cloudflare:* --external:node:*",
    "predeploy": "pnpm run build && pnpm run build:worker",
    "preview": "pnpm build && wrangler dev --env production",
    "preview:app": "vite preview",
    "preview:watch": "node scripts/watch-preview.js",
    "preview:local": "pnpm build && wrangler dev --local --env production",
    "deploy": "pnpm build && wrangler deploy",
    "deploy:prod": "pnpm build && wrangler deploy --env production",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "pretest": "pnpm run build:worker",
    "test": "vitest run --passWithNoTests",
    "test:all": "cross-env VITEST_INTEGRATION=true vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --passWithNoTests",
    "test:integration": "vitest run --passWithNoTests",
    "test:integration:dev": "vitest run --passWithNoTests",
    "test:integration:prod": "vitest run --passWithNoTests",
    "test:integration:otp": "vitest run handlers/auth/otp-login-flow.integration.test.ts",
    "test:integration:apikey": "vitest run handlers/auth/api-key.integration.test.ts",
    "tail": "wrangler tail",
    "tail:prod": "wrangler tail --env production",
    "tail:helper": "node scripts/tail-logs-helper.js"
  },
  "dependencies": {
    "@strixun/access-service": "workspace:*",
    "@strixun/ad-carousel": "workspace:*",
    "@strixun/api-framework": "workspace:*",
    "@strixun/e2e-helpers": "workspace:*",
    "@strixun/otp-login": "workspace:*",
    "@strixun/service-client": "workspace:*",
    "@strixun/shared-components": "workspace:*",
    "@strixun/status-flair": "workspace:*",
    "@strixun/tooltip": "workspace:*",
    "@strixun/types": "workspace:*",
    "mermaid": "^11.12.2",
    "prismjs": "^1.30.0",
    "svelte": "^5.46.0",
    "swagger-ui-dist": "^5.17.14"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.11.1",
    "@cloudflare/workers-types": "^4.20251225.0",
    "@iarna/toml": "^2.2.5",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tsconfig/svelte": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/prismjs": "^1.26.3",
    "@vitest/coverage-v8": "^4.0.16",
    "chokidar": "^4.0.3",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.24.0",
    "miniflare": "^4.20251217.0",
    "sass": "^1.97.1",
    "svelte-check": "^4.3.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  }
}
