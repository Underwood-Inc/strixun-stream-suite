{
  "name": "strixun-customer-api",
  "version": "1.0.0",
  "description": "Dedicated Cloudflare Worker for customer data management",
  "type": "module",
  "main": "worker.ts",
  "scripts": {
    "dev": "wrangler dev --port 8790 --local",
    "deploy": "wrangler deploy",
    "build:worker": "esbuild worker.ts --bundle --format=esm --outfile=dist/worker.js --platform=node --external:cloudflare:* --external:node:*",
    "pretest": "pnpm run build:worker",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --passWithNoTests"
  },
  "keywords": [
    "cloudflare",
    "worker",
    "customer",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241106.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.6.3",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0"
  },
  "dependencies": {
    "@strixun/api-framework": "workspace:*",
    "@strixun/types": "workspace:*",
    "@strixun/e2e-helpers": "workspace:*",
    "@strixun/otp-auth-service": "workspace:*",
    "@strixun/schemas": "workspace:*"
  }
}

