{
  "name": "strixun-url-shortener",
  "version": "1.0.0",
  "description": "Cloudflare Worker for URL shortening with OTP authentication, click analytics, and standalone web interface - Strixun Stream Suite",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.1",
  "scripts": {
    "build:decrypt": "node scripts/bundle-decrypt.js",
    "build:otp-core": "node scripts/bundle-otp-core.js",
    "build:app": "node scripts/build-app-with-env.js",
    "build:app-assets": "node scripts/build-app.js",
    "build:all": "pnpm build:decrypt && pnpm build:otp-core && pnpm build:app && pnpm build:app-assets",
    "predeploy": "pnpm build:all",
    "predeploy:prod": "pnpm build:all",
    "predev": "pnpm build:all",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --env production",
    "deploy: prod": "wrangler deploy --env production",
    "tail": "wrangler tail",
    "tail:prod": "wrangler tail --env production"
  },
  "dependencies": {
    "@strixun/api-framework": "workspace:*",
    "@strixun/types": "workspace:*"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "esbuild": "^0.19.12"
  }
}
