{
  "name": "strixun-url-shortener",
  "version": "1.1.0",
  "description": "Cloudflare Worker for URL shortening with OTP authentication, click analytics, and standalone web interface - Strixun Stream Suite",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.1",
  "scripts": {
    "build:deps": "pnpm --filter @strixun/types build && pnpm --filter @strixun/error-utils build && pnpm --filter @strixun/service-client build && pnpm --filter @strixun/api-framework build && pnpm --filter @strixun/auth-store build",
    "build:otp-auth-shared": "pnpm --filter @strixun/otp-auth-service build:shared",
    "build:otp-login": "pnpm --filter @strixun/otp-login build:react",
    "build:decrypt": "node scripts/bundle-decrypt.js",
    "build:otp-core": "node scripts/bundle-otp-core.js",
    "build:app": "cd app && pnpm build",
    "build:app-assets": "node scripts/build-app.js",
    "build:worker": "esbuild worker.ts --bundle --format=esm --outfile=dist/worker.js --platform=node --external:cloudflare:* --external:node:*",
    "build:all": "pnpm build:deps && pnpm build:otp-auth-shared && pnpm build:otp-login && pnpm build:decrypt && pnpm build:otp-core && pnpm build:app && pnpm build:app-assets && pnpm build:worker",
    "predeploy": "pnpm build:all",
    "predeploy:prod": "pnpm build:all",
    "predev": "pnpm build:all",
    "dev": "wrangler dev --port 8793 --local --env development",
    "dev:watch": "node scripts/watch-app.js",
    "dev:sync": "node scripts/browser-sync.js",
    "dev:all": "concurrently -n worker,watch,sync -c yellow,cyan,magenta \"pnpm dev\" \"pnpm dev:watch\" \"pnpm dev:sync\"",
    "deploy": "wrangler deploy --env production",
    "deploy: prod": "wrangler deploy --env production",
    "tail": "wrangler tail",
    "tail:prod": "wrangler tail --env production",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --passWithNoTests"
  },
  "dependencies": {
    "@strixun/api-framework": "workspace:*",
    "@strixun/error-utils": "workspace:*",
    "@strixun/types": "workspace:*",
    "@strixun/e2e-helpers": "workspace:*",
    "@strixun/service-client": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "browser-sync": "^3.0.3",
    "concurrently": "^9.2.1",
    "esbuild": "^0.19.12",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0"
  }
}
