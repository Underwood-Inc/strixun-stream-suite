{
  "name": "strixun-game-api",
  "version": "1.0.0",
  "description": "Dedicated Cloudflare Worker for idle game API endpoints",
  "private": true,
  "packageManager": "pnpm@9.15.1",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --port 8794 --local",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "tail": "wrangler tail",
    "tail:prod": "wrangler tail --env production",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --passWithNoTests"
  },
  "dependencies": {
    "@strixun/api-framework": "workspace:*",
    "@strixun/types": "workspace:*",
    "@strixun/e2e-helpers": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0"
  }
}

