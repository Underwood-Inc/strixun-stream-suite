{
  "name": "strixun-twitch-api",
  "version": "1.0.0",
  "description": "Cloudflare Worker for Twitch API proxy with cloud storage, authentication, and CDN endpoints",
  "private": true,
  "packageManager": "pnpm@9.15.1",
  "type": "module",
  "scripts": {
    "build:worker": "esbuild worker.ts --bundle --format=esm --outfile=dist/worker.js --platform=node --external:cloudflare:* --external:node:*",
    "predeploy": "pnpm run build:worker",
    "pretest": "pnpm run build:worker",
    "predev": "pnpm run build:worker",
    "dev": "wrangler dev --port 8789 --local",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "tail": "wrangler tail",
    "tail:prod": "wrangler tail --env production",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --passWithNoTests"
  },
  "dependencies": {
    "@strixun/api-framework": "workspace:*",
    "@strixun/types": "workspace:*",
    "@strixun/e2e-helpers": "workspace:*",
    "@strixun/service-client": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@vitest/coverage-v8": "^4.0.16",
    "esbuild": "^0.24.0",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0"
  }
}

