{
  "name": "strixun-twitch-api",
  "version": "1.0.0",
  "description": "Cloudflare Workers serverless infrastructure - Twitch API proxy, OTP auth, URL shortener, chat signaling, and cloud storage - Strixun's Stream Suite",
  "private": true,
  "packageManager": "pnpm@9.15.1",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "tail": "wrangler tail",
    "tail:prod": "wrangler tail --env production",
    "deploy:all": "node deploy-all.js",
    "deploy:api": "wrangler deploy",
    "deploy:url-shortener": "cd url-shortener && wrangler deploy",
    "deploy:otp-auth": "cd otp-auth-service && wrangler deploy",
    "deploy:customer-api": "cd customer-api && wrangler deploy",
    "deploy:game-api": "cd game-api && wrangler deploy",
    "deploy:chat-signaling": "cd chat-signaling && wrangler deploy"
  },
  "dependencies": {
    "@strixun/api-framework": "workspace:*"
  },
  "devDependencies": {}
}
