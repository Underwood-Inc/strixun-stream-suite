{
  "name": "strixun-chat-signaling",
  "version": "1.0.0",
  "description": "Cloudflare Worker for WebRTC signaling server - P2P chat room management and offer/answer exchange - Strixun Stream Suite",
  "private": true,
  "packageManager": "pnpm@9.15.1",
  "scripts": {
    "dev": "wrangler dev --port 8792 --local",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "tail": "wrangler tail",
    "tail:prod": "wrangler tail --env production",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --passWithNoTests"
  },
  "dependencies": {
    "@strixun/api-framework": "workspace:*",
    "@strixun/types": "workspace:*",
    "@strixun/e2e-helpers": "workspace:*",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0"
  }
}

