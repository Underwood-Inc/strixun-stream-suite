{
  "name": "@strixun/mods-hub",
  "packageManager": "pnpm@9.15.1",
  "private": true,
  "scripts": {
    "setup:env": "node setup-env.js",
    "predev": "pnpm setup:env && pnpm --filter @strixun/otp-login build:react",
    "predev:all": "pnpm setup:env",
    "prebuild": "pnpm --filter @strixun/otp-login build:react",
    "build": "tsc -b && vite build",
    "dev": "vite",
    "dev:all": "concurrently -n frontend,api,auth,customer -c cyan,yellow,magenta,green --raw --no-kill-others \"pnpm dev\" \"pnpm --filter strixun-mods-api dev\" \"pnpm --filter @strixun/otp-auth-service dev\" \"pnpm --filter strixun-customer-api dev\"",
    "dev:api": "pnpm --filter strixun-mods-api dev",
    "dev:auth": "pnpm --filter @strixun/otp-auth-service dev",
    "dev:customer": "pnpm --filter strixun-customer-api dev",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run --passWithNoTests",
    "test:api": "vitest run --passWithNoTests src/services/api",
    "test:api:coverage": "vitest run --coverage --passWithNoTests src/services/api",
    "test:api:watch": "vitest watch src/services/api",
    "test:coverage": "vitest run --coverage --passWithNoTests",
    "test:ui": "vitest --ui",
    "test:watch": "vitest"
  },
  "type": "module",
  "version": "1.0.0",
  "dependencies": {
    "@strixun/auth-store": "workspace:*",
    "@strixun/api-framework": "workspace:*",
    "@strixun/dice-board-game": "workspace:*",
    "@strixun/e2e-helpers": "workspace:*",
    "@strixun/search-query-parser": "workspace:*",
    "@strixun/virtualized-table": "workspace:*",
    "@tanstack/react-query": "^5.62.11",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^7.1.3",
    "react-window": "^1.8.10",
    "styled-components": "^6.1.13",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@types/react-window": "^1.8.8",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.16",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "jsdom": "^25.0.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.50.1",
    "vite": "^6.0.3",
    "vitest": "^4.0.16"
  }
}