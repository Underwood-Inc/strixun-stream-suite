{
  "name": "@strixun/mods-hub",
  "version": "1.0.0",
  "packageManager": "pnpm@9.15.1",
  "type": "module",
  "private": true,
  "scripts": {
    "prebuild": "pnpm --filter @strixun/otp-login build:react",
    "dev": "vite",
    "dev:api": "cd ../serverless/mods-api && pnpm dev",
    "dev:auth": "cd ../serverless/otp-auth-service && pnpm exec wrangler dev --port 8788",
    "dev:customer": "cd ../serverless/customer-api && pnpm exec wrangler dev --port 8789",
    "dev:all": "concurrently -n frontend,api,auth,customer -c cyan,yellow,magenta,green \"pnpm dev\" \"pnpm dev:api\" \"pnpm dev:auth\" \"pnpm dev:customer\"",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:api": "vitest run src/services/api",
    "test:api:watch": "vitest watch src/services/api",
    "test:api:coverage": "vitest run --coverage src/services/api"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.3",
    "react-helmet-async": "^2.0.5",
    "@tanstack/react-query": "^5.62.11",
    "zustand": "^5.0.2",
    "styled-components": "^6.1.13",
    "react-window": "^1.8.10",
    "@strixun/api-framework": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@types/react-window": "^1.8.8",
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react": "^4.3.4",
    "typescript": "~5.7.2",
    "vite": "^6.0.3",
    "@types/node": "^22.10.2",
    "@cloudflare/workers-types": "^4.20241127.0",
    "concurrently": "^9.2.1",
    "vitest": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^25.0.1"
  }
}

